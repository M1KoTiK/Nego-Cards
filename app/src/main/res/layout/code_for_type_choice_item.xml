<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/rounded_square_ripple_20"
    android:foregroundTint="@color/black18"
    android:backgroundTint="@color/black25"
    android:background="@drawable/rounded_square_20">

    <TextView
        android:id="@+id/NameCodeForChoiceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Файлы"
        android:textColor="@color/white_d9"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ImageCodeForChoiceType"
        app:layout_constraintTop_toTopOf="@+id/ImageCodeForChoiceType" />

    <TextView
        android:id="@+id/DescriptionCodeForChoiceType"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/file_code_desc"
        android:textColor="@color/white_d9"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/ImageCodeForChoiceType"
        app:layout_constraintTop_toBottomOf="@+id/NameCodeForChoiceType" />

    <ImageView
        android:id="@+id/ImageCodeForChoiceType"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_square_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/canvas_code_type" />

</androidx.constraintlayout.widget.ConstraintLayout>