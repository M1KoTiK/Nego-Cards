<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название холста"
        android:textSize="16sp"
        android:textColor="@color/white_d9"
        app:layout_constraintEnd_toEndOf="@+id/editTextInNameInput"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/editTextInNameInput"
        tools:layout_editor_absoluteY="193dp" />

    <EditText
        android:id="@+id/editTextInNameInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Введите название"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <Button
        android:id="@+id/continue_in_input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white_d9"
        android:text="Сохранить"
        android:textColor="@color/black18"
        app:layout_constraintEnd_toEndOf="@+id/editTextInNameInput"
        app:layout_constraintStart_toStartOf="@+id/editTextInNameInput"
        app:layout_constraintTop_toBottomOf="@+id/editTextInNameInput" />

</androidx.constraintlayout.widget.ConstraintLayout>