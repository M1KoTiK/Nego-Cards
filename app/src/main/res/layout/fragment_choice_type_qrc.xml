<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black18"
    tools:context=".fragments.pages.ChoiceTypeQRCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/how_create_qrc"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            app:counterTextColor="@color/white">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_popupmenu"
                android:inputType="none"
                android:text="Холст"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerForChoiceTypeQRC"
            android:name="com.example.negocards.fragments.choiceParametersForQR.ChoiceParametersForCardFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:navGraph="@navigation/nav"
            tools:layout="@layout/fragment_choice_parameters_for_card" />

    </LinearLayout>

</FrameLayout>