<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextStyle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black18</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="RoundedEditText" >
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/black18</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="RoundedButton" >
        <item name="android:textSize">19sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="backgroundTint">@color/inpField</item>
        <item name="android:textColor">@color/black18</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
</resources>