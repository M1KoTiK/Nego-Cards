<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextStyle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black18</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="RoundedEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/black18</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="RoundedEditTextBig" >
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/black18</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="RoundedEditTextSmall" >
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/black18</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="backgroundTint">@color/white_d9</item>
        <item name="android:textColor">@color/black18</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="RoundedButtonWithStroke">
        <item name="android:textSize">19sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/black18</item>
        <item name="strokeWidth">2sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="backgroundTint">@color/white_d9</item>
        <item name="android:textColor">@color/black18</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MenuTextStyle">
    <item name="android:textColor">@color/black18</item>
    <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomPopupBackground" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:popupBackground">@drawable/rounded_popupmenu</item>
    </style>

    <style name="WhitePointerEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/white_d9</item>
    </style>

    <style name="MaterialDialogSheet" parent="@style/Theme.NegoCards">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>